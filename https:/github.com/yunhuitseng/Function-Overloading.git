#include<iostream>
using std::cout;
using std::endl;
void  display(char s[])
{
	cout << s<<endl;
}
void  display(char s[],char a[])
{
	int max=strlen(s);
	if (strlen(s) < strlen(a))
		max = strlen(a);
		for (int i = 0; i < max; i++)
			cout << "=";
	cout << endl;
	cout << s << endl << a << endl;
	for (int i = 0; i < max; i++)
		cout << "=";
}

int main()
{
	char first[] = "C programming";
	char second[] = "is interesting";
	
	display( first);
	display(first, second);
	
	return 0;
}
